@model AppMexaba.Models.Usuario

@{
    ViewBag.Title = "Login";
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Login - AppMexaba</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <style>
        body {
            background: linear-gradient(135deg, #3a6073, #0ca9c8);
            color: #fff;
            height: 100vh;
            margin: 0;
            padding-bottom: 40px;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            font-family: 'Segoe UI', sans-serif;
        }


        .login-box {
            background-color: #212529;
            padding: 30px;
            border-radius: 10px;
            width: 100%;
            max-width: 400px;
            box-shadow: 0 0 15px rgba(0,0,0,0.5);
        }

        .form-control {
            font-size: 14px;
        }

        .btn-primary {
            background-color: #198754;
            border: none;
        }

            .btn-primary:hover {
                background-color: #157347;
            }

        .footer-login {
            position: fixed;
            bottom: 0;
            width: 100%;
            text-align: center;
            padding: 10px;
            font-size: 12px;
            background-color: #212529;
            color: #ffffff;
            border-top: 1px solid #495057;
        }
    </style>
</head>
<body>

    <div class="login-box">
        <div class="text-center mb-4">
            <img src="~/images/logo_white.png" alt="Mexaba Logo" style="max-width: 120px;" class="mb-2" />
        </div>

        <form asp-action="Login" method="post">
            <div class="mb-3">
                <label asp-for="Nombre" class="form-label">Usuario</label>
                <input asp-for="Nombre" class="form-control" />
            </div>
            <div class="mb-3">
                <label asp-for="Pwd" class="form-label">Contraseña</label>
                <input asp-for="Pwd" class="form-control" type="password" />
            </div>
            <button type="submit" class="btn btn-primary w-100">Entrar</button>
        </form>

        @if (ViewBag.Error != null)
        {
            <div class="alert alert-danger mt-3">@ViewBag.Error</div>
        }
    </div>

    <div class="footer-login">
        Desarrollado por Mexicana de Abarrotes
    </div>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>
</body>
</html>
